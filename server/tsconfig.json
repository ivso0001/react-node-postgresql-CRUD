{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types",
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
}